<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191949">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.eyalbira.loadingdots.LoadingDots xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="14dp"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="@android:color/white"
            app:LoadingDots_dots_count="3"
            app:LoadingDots_dots_size="15dp"
            app:LoadingDots_dots_space="5dp"
            app:LoadingDots_jump_duration="400"
            app:LoadingDots_jump_height="8dp"
            app:LoadingDots_loop_duration="1000"
            app:LoadingDots_loop_start_delay="100" />
    </RelativeLayout>

</RelativeLayout>
